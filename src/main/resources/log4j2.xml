<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitorInverval="30">

    <Properties>
        <!--        <Property name="get-order-log-enabled">${sys:logging.get-order.enabled}</Property>-->
        <Property name="get-order-log-enabled">true</Property>
    </Properties>

    <Appenders>
        <Console name="DefaultAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <Console name="TaskAppender" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level [%X{taskName}] [%X{traceId}] %logger{36} - %msg%n"/>
            <Filters>
                <MarkerFilter marker="GET_ORDER" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
                <MarkerFilter marker="CREATE_ORDER" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
            </Filters>
        </Console>

        <Routing name="Routing">
            <Routes pattern="$${ctx:taskName}">
                <!-- This route is chosen if ThreadContext has no value for key jobId. -->
                <Route key="get-order" ref="TaskAppender"/>
                <!-- This is the default route when no others match -->
                <Route ref="DefaultAppender"/>
            </Routes>
        </Routing>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Routing"/>
        </Root>
    </Loggers>

</Configuration>